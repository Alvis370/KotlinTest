<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context=".main.KotlinTestActivity">

    <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/outline_loyalty_black_18dp"
            android:scaleType="fitCenter"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="84dp" app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/selectedFoodText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chinese Food"
            android:textSize="30sp"
            android:fontFamily="@font/muli_bold"
            android:typeface="normal"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_image" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/addFoodText"/>
    <Button
            android:id="@+id/decideButton"
            android:text="Decide!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorPrimary"
            android:fontFamily="@font/muli_bold" android:textSize="18sp" android:textColor="@android:color/white"/>
    <EditText
            android:id="@+id/addFoodText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Add Your Food..." android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/addFoodButton"/>
    <Button
            android:id="@+id/addFoodButton"
            android:text="ADD FOOD"
            android:layout_width="217dp"
            android:layout_height="45dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:background="@color/colorPrimary"
            android:fontFamily="@font/muli_bold" android:textColor="@android:color/white"
            app:layout_constraintHorizontal_bias="0.5" android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toTopOf="@+id/decideButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>